<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="HeadTittle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">34sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextQuestion">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ButtonType">
        <item name="android:layout_width">343dp</item>
        <item name="android:layout_height">58dp</item>
        <item name="android:backgroundTint">#DB3022</item>
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="TextType">
        <item name="android:fontFamily">@font/convergence</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#222222</item>
        <item name="android:textSize">14sp</item>
    </style>
</resources>