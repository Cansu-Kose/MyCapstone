<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.forgotpassword.ForgotPasswordFragment">


    <ImageView
        android:id="@+id/back3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/frgtpsswrtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.041"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_arrow_back_ios_24" />

    <TextView
        android:id="@+id/frgtpsswrtext"
        style="@style/HeadTittle"
        android:layout_marginTop="160dp"
        android:text="Forgot password"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.241"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textpls"
        style="@style/TextType"
        android:layout_width="343dp"
        android:layout_height="58dp"
        android:layout_marginTop="68dp"
        android:text="Please, enter your email address. You will receive \n a link to create a new password via email."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/frgtpsswrtext"
        app:layout_constraintTop_toBottomOf="@+id/frgtpsswrtext" />

    <EditText
        android:id="@+id/editTextEmail3"
        android:layout_width="343dp"
        android:layout_height="60dp"
        android:layout_marginTop="88dp"
        android:ems="10"
        android:fontFamily="@font/convergence"
        android:hint="Email:"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/textpls"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textpls"
        app:layout_constraintTop_toBottomOf="@+id/textpls" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/sendbutton"
        style="@style/ButtonType"
        android:layout_marginBottom="128dp"
        android:text="SEND"
        app:cornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/editTextEmail3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/editTextEmail3"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail3"
        app:layout_constraintVertical_bias="0.973" />
</androidx.constraintlayout.widget.ConstraintLayout>
</layout>